<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="ca.cityofkingston">
	<namespace>kingston_staff</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity name="StaffPeople" local-service="true" remote-service="false" table="dir_people">

		<!-- PK fields -->
		<column name="id" type="long" primary="true" />

		<!-- Other Fields fields -->
		<column name="group" type="String" />
		<column name="department" type="String" />
		<column name="division" type="String" />
		<column name="unit" type="String" />
		<column name="title" type="String" />
		<column name="last" type="String" />
		<column name="first" type="String" />
		<column name="name" type="String" />
		<column name="phone" type="String" />
		<column name="fax" type="String" />
		<column name="email" type="String" />
		<column name="tstamp" type="Date" />

		<!-- Order -->

		<order by="asc">
			<order-column name="last" />
			<order-column name="first" />
		</order>

		<!-- Finder methods -->
		<finder return-type="Collection" name="LastnameAndFirstname">
			<finder-column name="last"  comparator="LIKE" case-sensitive="false"></finder-column>
			<finder-column name="first" comparator="LIKE" case-sensitive="false"></finder-column>
		</finder>
		
		
	</entity>
</service-builder>